programa Ejercicio2-3c
procesos
  proceso JuntarFlores(ES cant:numero)
  comenzar
    mientras(HayFlorEnLaEsquina)
      tomarFlor
      cant:=cant+1
  fin
  proceso Rectangulo(E lado1:numero; E lado2:numero; ES cant:numero)
  comenzar
    repetir 2
      repetir lado1
        mientras(HayFlorEnLaEsquina)
          JuntarFlores(cant)
        mover
      derecha
      repetir lado2
        mientras(HayFlorEnLaEsquina)
          JuntarFlores(cant)
        mover
      derecha
  fin
areas
  area1:AreaP(2,2,5,7)
  areaUno:AreaP(12,10,15,15)
  area2:AreaP(6,2,9,7)
  areaDos:AreaP(16,10,19,15)
  area3:AreaP(10,2,13,7)
  areaTres:AreaP(20,10,23,15)
  area4:AreaP(14,2,17,7)
  areaCuatro:AreaP(24,10,27,15)
  area5:AreaP(18,2,21,7)
  areaCinco:AreaP(28,10,31,15)
  area6:AreaP(22,2,25,7)
  areaSeis:AreaP(32,10,35,15)
  area7:AreaP(1,1,1,1)
robots
  robot tipo1
  variables
    cant:numero
    av:numero
    ca:numero
  comenzar
    cant:=0
    RecibirMensaje(av,RobotJefe)
    RecibirMensaje(ca,RobotJefe)
    Pos(av,ca)
    Rectangulo(5,3,cant)
    EnviarMensaje(cant,RobotJefe)
  fin
  robot tipoJefe
  variables 
    cant:numero
    total:numero
  comenzar
    total:=0
    EnviarMensaje(12,Robot1)
    EnviarMensaje(10,Robot1)
    EnviarMensaje(16,Robot2)
    EnviarMensaje(10,Robot2)
    EnviarMensaje(20,Robot3)
    EnviarMensaje(10,Robot3)
    EnviarMensaje(24,Robot4)
    EnviarMensaje(10,Robot4)
    EnviarMensaje(28,Robot5)
    EnviarMensaje(10,Robot5)
    EnviarMensaje(32,Robot6)
    EnviarMensaje(10,Robot6)
    repetir 6
      RecibirMensaje(cant,*)
      total:=total+cant
    Informar(total)
  fin
variables
  Robot1:tipo1
  Robot2:tipo1
  Robot3:tipo1
  Robot4:tipo1
  Robot5:tipo1
  Robot6:tipo1
  RobotJefe: tipoJefe
comenzar
  AsignarArea(Robot1,area1)
  AsignarArea(Robot1,areaUno)
  AsignarArea(Robot2,area2)
  AsignarArea(Robot2,areaDos)
  AsignarArea(Robot3,area3)
  AsignarArea(Robot3,areaTres)
  AsignarArea(Robot4,area4)
  AsignarArea(Robot4,areaCuatro)
  AsignarArea(Robot5,area5)
  AsignarArea(Robot5,areaCinco)
  AsignarArea(Robot6,area6)
  AsignarArea(Robot6,areaSeis)
  AsignarArea(RobotJefe,area7)
  Iniciar(Robot1,2,2)
  Iniciar(Robot2,6,2)
  Iniciar(Robot3,10,2)
  Iniciar(Robot4,14,2)
  Iniciar(Robot5,18,2)
  Iniciar(Robot6,22,2)
  Iniciar(RobotJefe,1,1)
fin 