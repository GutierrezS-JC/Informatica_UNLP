programa Ejercicio3-8
procesos
  proceso JuntarFlores(ES cantFlores:numero)
  comenzar
    mientras HayFlorEnLaEsquina
      tomarFlor
      cantFlores:=cantFlores+1
  fin
areas
  areaRobot1:AreaP(2,2,7,7)
  areaRobot2:AreaP(8,2,13,7)
  areaRobot3:AreaP(14,2,19,7)
  areaJefe:AreaP(1,1,1,1)
robots
  robot tipo1
  variables
    cantFlores:numero
    av:numero
    ca:numero
    avOriginal:numero
    caOriginal:numero
  comenzar
    cantFlores:=0
    repetir 3
      RecibirMensaje(av,RobotJefe)
      RecibirMensaje(ca,RobotJefe)
      RecibirMensaje(avOriginal,RobotJefe)
      RecibirMensaje(caOriginal,RobotJefe)
      Pos(av,ca)
      JuntarFlores(cantFlores)
      Pos(avOriginal,caOriginal)
      EnviarMensaje(cantFlores,RobotJefe)
  fin
  robot tipoJefe
  variables
    cant:numero
    av:numero
    ca:numero
    total:numero
  comenzar
    total:=0
    cant:=0
    repetir 3
      Random(av,2,7)
      EnviarMensaje(av,Robot1)
      Random(ca,2,7)
      EnviarMensaje(ca,Robot1)
      EnviarMensaje(2,Robot1)
      EnviarMensaje(2,Robot1)
      Random(av,8,13)
      EnviarMensaje(av,Robot2)
      Random(ca,2,7)
      EnviarMensaje(ca,Robot2)
      EnviarMensaje(8,Robot2)
      EnviarMensaje(2,Robot2)
      Random(av,14,19)
      EnviarMensaje(av,Robot3)
      Random(ca,2,7)
      EnviarMensaje(ca,Robot3)
      EnviarMensaje(14,Robot3)
      EnviarMensaje(2,Robot3)
      RecibirMensaje(cant,*)
      total:=total+cant
    Informar(total)
  fin
variables
  Robot1:tipo1
  Robot2:tipo1
  Robot3:tipo1
  RobotJefe:tipoJefe
comenzar
  AsignarArea(Robot1,areaRobot1)
  AsignarArea(Robot2,areaRobot2)
  AsignarArea(Robot3,areaRobot3)
  AsignarArea(RobotJefe,areaJefe)
  Iniciar(Robot1,2,2)
  Iniciar(Robot2,8,2)
  Iniciar(Robot3,14,2)
  Iniciar(RobotJefe,1,1)
fin  