programa Ejercicio4-2
procesos
  proceso Perimetro(ES cantFlores:numero)
  comenzar
    repetir 2
      repetir 20
        mientras HayFlorEnLaEsquina
          tomarFlor
          cantFlores:=cantFlores+1
        mover
      derecha
      repetir 15
        mientras HayFlorEnLaEsquina
          tomarFlor
          cantFlores:=cantFlores+1
        mover
      derecha
  fin  
areas
  area1:AreaP(15,15,30,35)
  area2:AreaP(40,40,55,60)
  area3:AreaPC(10,10,10,10)
robots
  robot tipo1
  variables
    cantFlores:numero
    avOriginal:numero
    caOriginal:numero
  comenzar
    cantFlores:=0
    avOriginal:=PosAv
    caOriginal:=PosCa
    Perimetro(cantFlores)
    BloquearEsquina(10,10)
    Pos(10,10)
    mientras HayFlorEnLaBolsa
      depositarFlor
    Pos(avOriginal,caOriginal)
    LiberarEsquina(10,10)
  fin
variables
  robot1:tipo1
  robot2:tipo1
comenzar
  AsignarArea(robot1,area1)
  AsignarArea(robot1,area3)
  AsignarArea(robot2,area2)
  AsignarArea(robot2,area3)
  Iniciar(robot1,15,15)
  Iniciar(robot2,40,40)
fin