programa Ejercicio3-8
areas
  AreaFiscal : AreaP (1,1,1,1)
  ciudad1 : AreaP(2,2,7,7)
  ciudad2 : AreaP(8,2,13,7)
  ciudad3 : AreaP(14,2,19,7)
robots 
  robot tipo1
  variables
    av: numero
    ca: numero
    flores: numero
    floresT: numero
  comenzar
    floresT:= 0
    flores:=0
    repetir 3
      Random(av,2,7)
      Random(ca,2,7)
      Pos(av,ca)
      mientras HayFlorEnLaEsquina
        tomarFlor
        flores:= flores + 1
    floresT:= flores
    EnviarMensaje(floresT, robotFiscal)
  fin
  robot tipo2
  variables
    av: numero
    ca: numero
    flores: numero
    floresT: numero
  comenzar
    flores:=0
    floresT:=0
    repetir 3
      Random(av,8,13)
      Random(ca,2,7)
      Pos(av,ca)
      mientras HayFlorEnLaEsquina
        tomarFlor
        flores:= flores + 1
    floresT:= flores
    EnviarMensaje(floresT, robotFiscal)
      
  fin
  robot tipo3
  variables
    av: numero
    ca: numero
    flores: numero
    floresT: numero
  comenzar
    flores:=0
    floresT:=0
    repetir 3
      Random(av,14,19)
      Random(ca,2,7)
      Pos(av,ca)
      mientras HayFlorEnLaEsquina
        tomarFlor
        flores:= flores +1
    floresT:= flores
    EnviarMensaje(floresT, robotFiscal)
  fin
  robot tipoFiscal
  variables
    total: numero
    cant: numero
  comenzar
    total:=0
    cant:=0
    repetir 3
      RecibirMensaje(cant, *)
      total:= total + cant
    Informar(total)
  fin
variables 
  robot1: tipo1
  robot2: tipo2
  robot3: tipo3
  robotFiscal: tipoFiscal
  av: numero
  ca: numero 
comenzar 
  AsignarArea(robot1,ciudad1)
  AsignarArea(robot2,ciudad2)
  AsignarArea(robot3,ciudad3)
  AsignarArea(robotFiscal,AreaFiscal)
  Iniciar(robot1, 2,2)
  Iniciar(robot2, 8,2)
  Iniciar(robot3,14,2)
  Iniciar(robotFiscal,1,1)
fin
